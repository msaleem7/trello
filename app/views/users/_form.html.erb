<%= form_with model: user do |f| %>

<div>
<%= f.label :name  %><br />
<%= f.text_field :name  %>
</div><br/>

<div>
<%= f.label :age %><br />
<%= f.text_field :age %>
</div><br/>

<div>
<%= f.label :email %><br />
<%= f.text_field :email %>
</div><br/>

<div>
<%= f.label :password %><br />
<%= f.password_field :password %><br /><br/>
<%= f.label "Confirm Password" %><br />
<%= f.password_field :password_confirmation %>
</div><br/>

<div>
<% if user.persisted? %>
<%= f.submit "Update" %>
<% else %>
<%= f.submit "Create" %>
<% end %>
</div>


<% end %>